@page "/counter"
@inject ItemService itemService
@inject LocationService locationService
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    protected override async Task OnInitializedAsync()
    {
        var items = await itemService.GetAllAsync();
        if (!items.Any()) {
            for (int i = 0; i < 10; i++) {
                await itemService.CreateAsync(new Core.Models.Item() {Name = $"{i}", Description = $"{i}"});
            }
        }
        var locations = await locationService.GetAllAsync();
        if (!locations.Any()) {
            for (int i = 0; i < 10; i++) {
                await locationService.CreateAsync(new Core.Models.Location() {Unit= $"{i}", Cell= $"{i}"});
            }
        }
    }

    private void IncrementCount()
    {
        currentCount++;
    }
}
